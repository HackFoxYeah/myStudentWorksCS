            </MenuItem>
            <MenuItem Header="Функции" Height="20">
                <MenuItem Header="Выполнить" Click="calculateButton_Click"/>
            </MenuItem>
            <MenuItem Header="О программе" Height="20" Click="About_CLick"/>
